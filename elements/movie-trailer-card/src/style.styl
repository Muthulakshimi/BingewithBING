@import url('https://fonts.googleapis.com/css?family=Maven+Pro');

@import url('https://fonts.googleapis.com/css?family=Orbitron');

title = Orbitron
light = #E2E3E6
font = Maven Pro
thin = 300

.wrapper
  background url('http://www.wallpaperhi.com/thumbnails/detail/20131220/abstract%20minimalistic%20placebo%20gaussian%20blur%20blurred_www.wallpaperhi.com_81.jpg')
  background-repeat no-repeat
  background-size 350%
  height 100%

.bg
  position: relative;
  top: 6%;
  transform: translateY(-10%);
  background url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/324479/martian.jpg)
  background-repeat no-repeat
  background-position center-center
  background-size cover
  height auto
  padding 2.5em
  filter saturate(1) blur(.35px)
  z-index 5
  transition all 500ms ease-in-out
  
.title
  font-family title
  font-size 2.75em
  margin-top 20%
  text-transform uppercase
  
.sub-right
  float right
  position relative
  right .5em
  
.break
  margin 7% 0 5% 0
  height: 1px
  width 100%
  background light
  
.content
  margin 0 0 20% 0

.button-holder
  position relative
  top 30vh
  left 20vh

.fa-play
  margin-right .75em
  
.button
  background #E2494B
  font-family font
  font-weight 300
  text-transform uppercase
  border-radius 3px
  transition all 300ms ease-in-out
  padding 16px
  top 10em
  
  &:hover, &:focus
    background #cc3b3b
  
// globals / utilities

h1, h2, h3, h4, h5, h6, p, .sub-left, .sub-right
  color light
  font-family font
  
.sub-left, .sub-right
  font-family title
  font-size .90em
  position relative
  top -.5em
  
p, .sub-left, .sub-right
  font-weight thin
  letter-spacing 1px
